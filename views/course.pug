html
    head
        title Course #{id}
        include headers
    body
        include base
        div(class="container")
            div(class="row") 
                h1 #{id} - #{course.name} 
            div(class="row")
                div(class="col s12")
                    div(class="card-panel hoverable")
                        h4 Professor in charge: #{user.coursesRegistered[id]}
                        h6 #{course.start} - #{course.end}
                        p #{course.desc}
                        form(method="POST",action="/delete")
                            input(type="hidden",name="id",value=id)
                            button(type="submit",class="btn waves-effect waves-light") Drop course